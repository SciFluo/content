{
	"name": "@scifluo/content",
	"type": "module",
	"version": "1.0.0",
	"description": "科荧世界观网站内容",
	"license": "CC-BY-NC-ND-4.0",
	"homepage": "https://SciFluo.SharpIce.top",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SciFluo/content.git"
	},
	"bugs": {
		"url": "https://github.com/SciFluo/content/issues"
	},
	"author": {
		"name": "SharpIce",
		"email": "VupRbl@163.com",
		"url": "https://SharpIce.top"
	},
	"scripts": {
		"pre": "prettier . --write"
	},
	"dependencies": {
		"prettier": "3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"tailwindcss": "^3.4.13"
	},
	"prettier": {
		"semi": true,
		"tabWidth": 4,
		"useTabs": true,
		"endOfLine": "lf",
		"printWidth": 120,
		"singleQuote": true,
		"jsxSingleQuote": true,
		"trailingComma": "all",
		"arrowParens": "avoid",
		"bracketSameLine": true,
		"htmlWhitespaceSensitivity": "strict",
		"tailwindConfig": "./tailwind.config.js",
		"plugins": [
			"prettier-plugin-tailwindcss"
		],
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"useTabs": false
				}
			},
			{
				"files": "*.md",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
